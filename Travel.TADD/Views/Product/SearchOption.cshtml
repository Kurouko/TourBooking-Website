
@model IEnumerable<Travel.TADD.Models.Product>
<div style="margin-top:100px"></div>
@using (Html.BeginForm("SearchOption", "Product"))
{
    <text>từ</text>
    <input type="number" name="min" />
    <text>từ</text>
    <input type="number" name="max" />
    <input type="submit" value="Search" />
    <div class="container">
        <div class="row">
            @foreach (var pro in Model)
            {
            <div class="col-sm-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card-pro" style="width:160px">
                    <p>@Html.DisplayFor(model => pro.ProductID)</p>
                    <img src="@Url.Content(pro.ImagePro)" height="150" width="150" />
                    <p>@Html.DisplayFor(model => pro.NamePro)</p>
                    <p>@Html.DisplayFor(Model => pro.Price)</p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = pro.ProductID }) |
                        @Html.ActionLink("Details", "Details", new { id = pro.ProductID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = pro.ProductID }) |
                    </p>
                </div>
            </div>
            }
        </div>
    </div>
}